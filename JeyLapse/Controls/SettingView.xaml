<UserControl x:Name="settingView" x:Class="JeyLapse.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Width="80" Height="80">
    
    <Grid x:Name="LayoutRoot" Background="#5AC3C3C3">
    	<Image Source="{Binding ElementName=settingView, Path=Image}" HorizontalAlignment="Center" Height="48" VerticalAlignment="Top" Width="48" Margin="0,4,0,0"/>
    	<TextBlock TextWrapping="Wrap" Text="{Binding Text, ElementName=settingView}" VerticalAlignment="Bottom" FontFamily="Segoe WP Semibold" Height="28" TextAlignment="Center" Foreground="#FFC3C3C3" Width="80" FontSize="16"/>
    </Grid>
</UserControl>